{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "es6",
    "lib": [
      "ES2022",
      "ES2022.Array",
      "DOM"
    ],
    "outDir": "dist",
    "baseUrl": "src/",
    "strict": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}